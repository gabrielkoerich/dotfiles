alias rollback="php artisan migrate:rollback"

# Run commands in vendor directory, checking if /laravel exists
function vendorr() {
    if [ $# -eq 0 ]; then
        echo "No command provided";

        return 1;
    fi

    if [ -d laravel ]; then
        if [[ $1 == "--subshell" ]]; then
            (cd laravel && vendor/bin/"$2" "${@:3}")
        else
            laravel/vendor/bin/"$1" "${@:2}"
        fi
    else
        vendor/bin/"$1" "${@:2}"
    fi
}

